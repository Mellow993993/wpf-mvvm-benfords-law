<Window x:Class="BenfordSet.View.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BenfordSet.View"
        mc:Ignorable="d"
        Title="Settings" Height="130" Width="230">
    <Grid>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="165,89,0,0" VerticalAlignment="Top" Width="57" RenderTransformOrigin="0.931,0.253"/>
        <Button Content="Okay" HorizontalAlignment="Left" Margin="115,89,0,0" VerticalAlignment="Top" Width="45"/>
        <ComboBox HorizontalAlignment="Left" Margin="69,22,0,0" VerticalAlignment="Top" Width="154">
            <ComboBoxItem>English</ComboBoxItem>
            <ComboBoxItem>Deutsch</ComboBoxItem>
            <ComboBoxItem IsSelected="True">Englisch</ComboBoxItem>
        </ComboBox>
        <Label Content="Language " HorizontalAlignment="Left" Margin="5,19,0,0" VerticalAlignment="Top"/>
        <Label Content="Threshold" HorizontalAlignment="Left" Margin="5,54,0,0" VerticalAlignment="Top"/>
        <Slider Value="5" HorizontalAlignment="Left" Margin="69,59,0,0" VerticalAlignment="Top" Width="154"/>

    </Grid>
</Window>
